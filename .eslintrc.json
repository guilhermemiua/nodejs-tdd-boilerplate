{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 200
            }
        ],
        "class-methods-use-this": "off",
        "no-param-reassign": "off",
        "arrow-body-style": "off",
        "func-names": "off"
    }
}